<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="RunningApp.MyPanelPage"
	x:Name="MyPanel"
	BackgroundColor="#99ccff"
	NavigationPage.HasNavigationBar="false"
	>
	<StackLayout>   		
		<Button 
			Text="Moja ostatnia trasa"
			TextColor="Navy"
			FontFamily="AmaticSC-Bold"
			FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
			Clicked="buttonClicked_myRoute"
			BackgroundColor="#e6f2ff"
			WidthRequest="300"
			HeightRequest="150"
			BorderColor="Navy"
			BorderWidth="2"
			Margin="0,100,0,0"/>
		
		<Button
			Text="Historia"
			TextColor="Navy"
			FontFamily="AmaticSC-Bold"
			FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
			Clicked="buttonClicked_history"
			WidthRequest="300"
			HeightRequest="150"
			BackgroundColor="#e6f2ff"
			BorderWidth="2"
			BorderColor="Navy"
			Margin="0,0,0,100">
		</Button>
		
	</StackLayout>   
</ContentPage>
